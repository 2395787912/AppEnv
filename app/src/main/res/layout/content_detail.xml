<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sollyu.android.appenv.activity.DetailActivity"
    tools:showIn="@layout/activity_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="128dp">

        <com.sollyu.android.appenv.view.DetailItem
            android:id="@+id/manufacturer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickManufacturer"
            app:hint="@string/manufacturer"
            app:icon_button="{fa_caret_square_o_down}"
            app:icon_text="{fa_university}"
            />

        <com.sollyu.android.appenv.view.DetailItem
            android:id="@+id/model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickModel"
            app:hint="@string/model"
            app:icon_button="{fa_caret_square_o_down}"
            app:icon_text="{fa_university}"
            />

        <com.sollyu.android.appenv.view.DetailItem
            android:id="@+id/serial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickSerial"
            app:hint="@string/serial"
            app:icon_button="{fa_random}"
            app:icon_text="{fa-tty}"
            />

        <com.sollyu.android.appenv.view.DetailItem
            android:id="@+id/versionName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickVersionName"
            app:hint="@string/versionName"
            app:icon_button="{fa_random}"
            app:icon_text="{fa-bolt}"
            />

        <com.sollyu.android.appenv.view.DetailItem
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickLineNumber"
            app:hint="@string/phone_number"
            app:icon_button="{fa_random}"
            app:icon_text="{fa-phone}"
            />

        <com.sollyu.android.appenv.view.DetailItem
            android:id="@+id/phone_network_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickNetworkType"
            app:hint="@string/phone_network_type"
            app:icon_button="{fa_caret_square_o_down}"
            app:icon_text="{fa-rss}"
            />

        <com.sollyu.android.appenv.view.DetailItem
            android:id="@+id/phone_device_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickDeviceId"
            app:hint="@string/phone_device_id"
            app:icon_button="{fa_random}"
            app:icon_text="{fa-barcode}"
            />

        <com.sollyu.android.appenv.view.DetailItem
            android:id="@+id/sim_serial_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickSimSerialNumber"
            app:hint="@string/sim_serial_number"
            app:icon_button="{fa_random}"
            app:icon_text="{fa-sliders}"
            />

        <com.sollyu.android.appenv.view.DetailItem
            android:id="@+id/sim_subscriber_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickSimSubscriberId"
            app:hint="@string/sim_subscriber_id"
            app:icon_button="{fa_random}"
            app:icon_text="{fa-certificate}"
            />

        <com.sollyu.android.appenv.view.DetailItem
            android:id="@+id/wifi_info_ssid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickWifiInfoSSID"
            app:hint="@string/wifi_info_ssid"
            app:icon_button="{fa_random}"
            app:icon_text="{fa-wifi}"
            />

        <com.sollyu.android.appenv.view.DetailItem
            android:id="@+id/wifi_info_mac_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickWifiInfoMacAddress"
            app:hint="@string/wifi_info_mac_address"
            app:icon_button="{fa_random}"
            app:icon_text="{fa-tasks}"
            />

        <com.sollyu.android.appenv.view.DetailItem
            android:id="@+id/settingsSecureAndroidId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickAndroidId"
            app:hint="Android Id"
            app:icon_button="{fa_random}"
            app:icon_text="{fa-fax}"
            />

        <com.sollyu.android.appenv.view.DetailItem
            android:id="@+id/diDisplayDip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickDisplayDpi"
            app:hint="DPI"
            app:icon_button="{fa-times}"
            app:icon_text="{fa-television}"
            />
    </LinearLayout>


</ScrollView>
